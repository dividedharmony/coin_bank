<main>
  <h1>
    Transactions#new
  </h1>

  <%= form_with model: @transaction, local: true do |f| %>
    <div class="form-group">
      <%= f.label :from_amount, "Amount Withdrawn:" %>
      <%= f.number_field :from_amount, step: 0.00000001 %>

      <%= f.label :from_currency_id, "From Currency:" %>
      <%=
        f.select :from_currency_id,
                 options_from_collection_for_select(CoinBank::Currency.fiat, :id, :name) +
                 options_from_collection_for_select(CoinBank::Currency.crypto, :id, :name)
      %>
    </div>

    <div class="form-group">
      <%= f.label :to_amount, "Amount Deposited:" %>
      <%= f.number_field :to_amount, step: 0.00000001 %>

      <%= f.label :to_currency_id, "To Currency:" %>
      <%=
        f.select :to_currency_id,
                 options_from_collection_for_select(CoinBank::Currency.fiat, :id, :name) +
                 options_from_collection_for_select(CoinBank::Currency.crypto, :id, :name)
      %>
    </div>

    <div class="form-group">
      <%= f.label :fee_amount, "Fee Amount:" %>
      <%= f.number_field :fee_amount %>
    </div>

    <div class="form-group">
      <%= f.label :transacted_at, "Time of Transaction:" %>
      <%= f.datetime_field :transacted_at %>
    </div>

    <div class="form-group">
      <%= f.submit "Create Transaction" %>
    </div>
  <% end %>
</main>
